{% extends 'layouts/security.html.twig' %}

{% set security_title = 'security.password.request.page_title'|trans %}

{% block content %}
    <header class="layout-stack--tight">
        <h1 class="text-heading text-2xl">{{ 'security.password.request.heading'|trans }}</h1>
        <p class="text-text-muted">{{ 'security.password.request.subtitle'|trans }}</p>
    </header>

    {{ form_start(requestForm, { attr: { class: 'layout-stack' } }) }}
        {{ form_row(requestForm.email) }}
        {% include 'partials/forms/buttons/primary.html.twig' with {
            label: 'security.password.request.actions.submit'|trans
        } %}
    {{ form_end(requestForm) }}

    <p class="text-sm text-text-muted">
        <a class="text-primary hover:text-primary-darker" href="{{ path('app_login') }}">{{ 'security.password.shared.back_to_login'|trans }}</a>
    </p>
{% endblock %}
