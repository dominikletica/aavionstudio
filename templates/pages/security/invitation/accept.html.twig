{% extends 'layouts/security.html.twig' %}

{% block security_title 'Complete your invitation' %}

{% block security_main %}
    <div class="layout-stack">
        <header class="layout-stack--tight">
            <h1 class="text-heading text-2xl">Welcome to aavion Studio</h1>
            <p class="text-text-muted">You're joining as <strong class="text-text">{{ email }}</strong>. Choose a display name and password to activate your account.</p>
        </header>

        {{ form_start(acceptForm, { attr: { class: 'layout-stack' } }) }}
            {{ form_row(acceptForm.display_name) }}
            {{ form_row(acceptForm.plainPassword.first) }}
            {{ form_row(acceptForm.plainPassword.second) }}
            {% include 'partials/forms/buttons/primary.html.twig' with {
                label: 'Activate account'
            } %}
        {{ form_end(acceptForm) }}

        <p class="text-sm text-text-muted">
            <a class="text-primary hover:text-primary-darker" href="{{ path('app_login') }}">Back to sign in</a>
        </p>
    </div>
{% endblock %}
