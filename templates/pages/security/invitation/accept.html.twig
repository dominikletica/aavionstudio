{% extends 'layouts/security.html.twig' %}

{% set security_title = 'security.invitation.page_title'|trans %}

{% block content %}
    <header class="layout-stack--tight">
        <h1 class="text-heading text-2xl">{{ 'security.invitation.heading'|trans({ '%site%': header_title is defined and header_title ? header_title : (site_title is defined and site_title ? site_title : 'app.name'|trans) }) }}</h1>
        <p class="text-text-muted">{{ 'security.invitation.intro'|trans({ '%email%': email })|raw }}</p>
    </header>

    {{ form_start(acceptForm, { attr: { class: 'layout-stack' } }) }}
        {{ form_row(acceptForm.display_name) }}
        {{ form_row(acceptForm.plainPassword.first) }}
        {{ form_row(acceptForm.plainPassword.second) }}
        {% include 'partials/forms/buttons/primary.html.twig' with {
            label: 'security.invitation.activate'|trans
        } %}
    {{ form_end(acceptForm) }}

    <p class="text-sm text-text-muted">
        <a class="text-primary hover:text-primary-darker" href="{{ path('app_login') }}">{{ 'security.invitation.back_to_login'|trans }}</a>
    </p>
{% endblock %}
