<turbo-frame id="themedemo_tip">
    <article class="layout-stack layout-stack--tight rounded-lg border border-border bg-surface p-4 shadow-sm">
        <header class="flex items-start justify-between gap-3">
            <div>
                <p class="text-xs font-semibold uppercase tracking-wide text-text-muted">{{ 'Theme note'|trans }}</p>
                <h3 class="text-base font-semibold text-text">{{ tip.title }}</h3>
            </div>
            <span class="badge badge--info">{{ 'Live tip'|trans }}</span>
        </header>
        <p class="text-sm leading-relaxed text-text-muted">{{ tip.description }}</p>
    </article>
</turbo-frame>
