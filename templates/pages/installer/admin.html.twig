{% extends 'layouts/installer.html.twig' %}

{% block content %}
    {% include 'partials/components/section_heading.html.twig' with {
        title: 'Administrator account'|trans,
        subtitle: 'Invite the first administrator, configure MFA, and seed recovery contacts.'|trans
    } only %}

    <div class="grid gap-6 lg:grid-cols-[minmax(0,2fr)_minmax(0,1fr)]">
        <div class="layout-stack layout-stack--loose">
            {% set admin_requirements %}
                <ul class="list-disc space-y-2 pl-5 text-sm leading-relaxed text-text-muted">
                    <li>{{ 'Full name and primary email address for the first administrator.'|trans }}</li>
                    <li>{{ 'Temporary password or invitation token delivery method (email recommended).'|trans }}</li>
                    <li>{{ 'Optional recovery email or phone number for account reset notifications.'|trans }}</li>
                    <li>{{ 'Decision on mandatory MFA provider (TOTP or WebAuthn) before launch.'|trans }}</li>
                    <li>{{ 'Security questions or backup codes policy to cover lost-second-factor scenarios.'|trans }}</li>
                </ul>
            {% endset %}

            {% include 'partials/components/card.html.twig' with {
                eyebrow: 'Checklist',
                title: 'Collect these details',
                subtitle: 'Prepare the first admin invitation before the UI opens.',
                body: admin_requirements
            } only %}

            {% set admin_practices %}
                <ol class="list-decimal space-y-3 pl-5 text-sm leading-relaxed text-text-muted">
                    <li>{{ 'Create at least two administrator accounts to avoid lockouts during MFA rollout.'|trans }}</li>
                    <li>{{ 'Document emergency contact paths and keep recovery codes in a secure vault (password manager, HSM, etc.).'|trans }}</li>
                    <li>{{ 'Restrict SMTP access to the installer host to prevent invitation spoofing while the system is bootstrapping.'|trans }}</li>
                    <li>{{ 'Enable audit logging notifications so credential changes trigger alerts for the initial team.'|trans }}</li>
                </ol>
            {% endset %}

            {% include 'partials/components/card.html.twig' with {
                eyebrow: 'Good practice',
                title: 'Secure onboarding guidance',
                body: admin_practices
            } only %}
        </div>

        <div class="layout-stack layout-stack--tight items-center">
            {% include 'partials/components/illustration.html.twig' with {
                name: 'add-user',
                variant: 'lg',
                attributes: { class: 'w-full max-w-md' },
                alt: 'Admin invitation illustration'|trans
            } only %}

            {% include 'partials/components/card.html.twig' with {
                variant: 'muted',
                title: 'Coming soon'|trans,
                body: '<p class="text-sm text-text-muted">' ~ 'The onboarding screen will let you invite administrators, enforce MFA, and seed audit notifications directly from this step.'|trans ~ '</p>'
            } only %}
        </div>
    </div>
{% endblock %}
