{% extends 'layouts/installer.html.twig' %}

{% block content %}
    {% include 'partials/components/section_heading.html.twig' with {
        title: 'Storage configuration'|trans,
        subtitle: 'Pick the writable location for databases, uploads, snapshots, and backups. Additional backends will plug into this root later on.'|trans
    } only %}

    <div class="grid gap-6 lg:grid-cols-[minmax(0,2fr)_minmax(0,1fr)]">
        <div class="surface rounded-md border border-border p-6 layout-stack layout-stack--loose">
            {{ form_start(storage_form, { attr: { class: 'layout-stack layout-stack--tight' } }) }}
                <p class="text-sm text-text-muted">
                    {{ 'Ensure the selected directory is writable by PHP. The installer will provision <code>databases</code>, <code>uploads</code>, <code>snapshots</code>, and <code>backups</code> subfolders automatically.'|trans|raw }}
                </p>
                {{ form_row(storage_form.root) }}
                <div class="flex justify-end">
                    {{ include('partials/components/button.html.twig', {
                        label: 'Save storage settings'|trans,
                        attributes: { type: 'submit', class: 'btn btn-primary' }
                    }) }}
                </div>
            {{ form_end(storage_form) }}
        </div>

        <div class="layout-stack layout-stack--tight items-center">
            {% include 'partials/components/illustration.html.twig' with {
                name: 'add-files',
                variant: 'lg',
                attributes: { class: 'w-full max-w-md' },
                alt: 'Storage illustration'|trans
            } only %}

            {% set preparation_body %}
                <ol class="list-decimal space-y-3 pl-5 text-sm leading-relaxed text-text-muted">
                    <li>{{ 'Ensure the server user can read/write <code>var/</code> and has space for media + snapshots.'|trans|raw }}</li>
                    <li>{{ 'Provision object storage buckets and credentials if you plan to offload media from day one.'|trans }}</li>
                    <li>{{ 'Decide on encryption-at-rest requirements; the wizard will offer client-side and provider-managed options.'|trans }}</li>
                    <li>{{ 'Document data residency expectations so projects know where uploads will live.'|trans }}</li>
                </ol>
            {% endset %}

            {% include 'partials/components/card.html.twig' with {
                eyebrow: 'Get ready',
                title: 'Steps you can already take',
                body: preparation_body
            } only %}

            {% include 'partials/components/card.html.twig' with {
                variant: 'muted',
                title: 'Roadmap'|trans,
                body: '<p class="text-sm text-text-muted">' ~ 'Remote adapters (S3, Azure, MinIO), retention policies, and CDN hooks land in upcoming milestones.'|trans ~ '</p>'
            } only %}
        </div>
    </div>
{% endblock %}
