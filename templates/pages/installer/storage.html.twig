{% extends 'layouts/installer.html.twig' %}

{% block content %}
    {% include 'partials/components/section_heading.html.twig' with {
        title: 'Storage configuration'|trans,
        subtitle: 'Connect persistent stores for media and backups. This step will arrive in a later iteration.'|trans
    } only %}

    <div class="grid gap-6 lg:grid-cols-[minmax(0,2fr)_minmax(0,1fr)]">
        <div class="layout-stack layout-stack--loose">
            {% set roadmap_body %}
                <ul class="list-disc space-y-2 pl-5 text-sm leading-relaxed text-text-muted">
                    <li>{{ 'Local filesystem support with configurable root (default: <code>var/storage</code>).'|trans|raw }}</li>
                    <li>{{ 'Object storage adapters (S3, Azure Blob, MinIO) with separate buckets for media and backups.'|trans }}</li>
                    <li>{{ 'Automatic checksum generation and integrity reports surfaced in the diagnostics centre.'|trans }}</li>
                    <li>{{ 'Retention policies for snapshots and scheduled pruning tasks via Messenger.'|trans }}</li>
                    <li>{{ 'Optional CDN configuration for public assets served by projects.'|trans }}</li>
                </ul>
            {% endset %}

            {% include 'partials/components/card.html.twig' with {
                eyebrow: 'Roadmap',
                title: 'Planned storage capabilities',
                body: roadmap_body
            } only %}

            {% set preparation_body %}
                <ol class="list-decimal space-y-3 pl-5 text-sm leading-relaxed text-text-muted">
                    <li>{{ 'Ensure the server user can read/write <code>var/</code> and has space for media + snapshots.'|trans|raw }}</li>
                    <li>{{ 'Provision object storage buckets and credentials if you plan to offload media from day one.'|trans }}</li>
                    <li>{{ 'Decide on encryption-at-rest requirements; the wizard will offer client-side and provider-managed options.'|trans }}</li>
                    <li>{{ 'Document data residency expectations so projects know where uploads will live.'|trans }}</li>
                </ol>
            {% endset %}

            {% include 'partials/components/card.html.twig' with {
                eyebrow: 'Get ready',
                title: 'Steps you can already take',
                body: preparation_body
            } only %}
        </div>

        <div class="layout-stack layout-stack--tight items-center">
            {% include 'partials/components/illustration.html.twig' with {
                name: 'add-files',
                variant: 'lg',
                attributes: { class: 'w-full max-w-md' },
                alt: 'Storage illustration'|trans
            } only %}

            {% include 'partials/components/empty_state.html.twig' with {
                variant: 'muted',
                title: 'Storage wizard coming soon'|trans,
                description: 'We are designing an interactive flow to pick storage backends, credentials, and replication strategies.'|trans
            } only %}
        </div>
    </div>
{% endblock %}
