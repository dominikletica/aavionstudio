{% extends 'layouts/entity.html.twig' %}
{% set entity_title = status_code ? status_code ~ ' ' ~ (status_text|default('Error'|trans)) : status_text|default('Error'|trans) %}

{% block content %}
    {% block error_intro %}
        <div class="layout-stack--tight">
            <h1 class="text-heading text-3xl">{{ status_code }}</h1>
            <p class="text-text-muted text-lg">{{ status_text }}</p>
        </div>
        <p class="text-text">{{ 'We hit a snag while processing your request. Please try again or contact support if the issue persists.'|trans }}</p>
    {% endblock %}

    {% if debug and exception_message %}
        <section class="surface-muted rounded-md p-6 text-left layout-stack">
            <h2 class="text-heading text-xl">{{ 'Debug details'|trans }}</h2>
            <p class="text-sm text-text"><strong>{{ exception_message }}</strong></p>
            {% if stack is not empty %}
                <ol class="text-xs font-mono space-y-2">
                    {% for frame in stack %}
                        <li>
                            {{ loop.index }}. {{ frame.file|default('n/a'|trans) }}:{{ frame.line|default('n/a'|trans) }}
                            {% if frame.function is defined %}
                                â€” {{ frame.class|default('') ~ (frame.class is defined and frame.class ? '::' : '') }}{{ frame.function }}()
                            {% endif %}
                        </li>
                    {% endfor %}
                </ol>
            {% endif %}
        </section>
    {% endif %}
{% endblock %}
