<div class="form-field" data-state="{{ state|default('default') }}">
    {% if label is defined %}<label class="form-label" for="{{ id }}">{{ label }}</label>{% endif %}
    <textarea
        id="{{ id }}"
        name="{{ name }}"
        rows="{{ rows|default(4) }}"
        {% if placeholder is defined %}placeholder="{{ placeholder }}"{% endif %}
        class="{{ classes|default('') }}"
        {% if required|default(false) %}required{% endif %}
        {% if disabled|default(false) %}disabled{% endif %}
        {% if autocomplete is defined %}autocomplete="{{ autocomplete }}"{% endif %}
    >{{ value|default('') }}</textarea>
    {% if help is defined %}<p class="form-help">{{ help }}</p>{% endif %}
</div>
