{% extends 'layouts/base.html.twig' %}

{% block title %}{% block admin_title %}Admin Â· aavion Studio{% endblock %}{% endblock %}

{% block body %}
<div class="min-h-screen bg-surface">
    <header class="border-b border-border bg-surface">
        <div class="mx-auto flex max-w-7xl items-center justify-between gap-4 px-6 py-4">
            <div class="flex items-center gap-3">
                <span class="text-lg font-semibold text-heading">aavion Studio</span>
                {% if primary_menu is defined %}
                    {% include 'partials/navigation/global.html.twig' with { menu: primary_menu } only %}
                {% endif %}
            </div>
            <div class="flex items-center gap-3 text-sm text-text-muted">
                {% block admin_header_actions %}{% endblock %}
            </div>
        </div>
    </header>
    <div class="mx-auto flex max-w-7xl gap-6 px-6 py-8">
        <aside class="w-64 shrink-0">
            {% if sidebar_menu is defined %}
                {% include 'partials/navigation/sidebar.html.twig' with { menu: sidebar_menu } only %}
            {% endif %}
        </aside>
        <main class="flex-1 layout-stack">
            {% block main %}{% endblock %}
        </main>
    </div>
</div>
{% endblock %}
