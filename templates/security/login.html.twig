{% extends 'security/layout.html.twig' %}

{% block title 'Sign in Â· aavion Studio' %}

{% block body %}
<div class="card">
    <h1>Welcome back</h1>
    {% if error %}
        <div class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('app_login') }}" method="post" novalidate>
        <label for="email">Email address</label>
        <input type="email" id="email" name="email" value="{{ last_username }}" autocomplete="email" required autofocus>

        <label for="password" style="margin-top:1.25rem;">Password</label>
        <input type="password" id="password" name="password" autocomplete="current-password" required>

        <div style="margin-top:1rem;">
            <label style="display:flex; align-items:center; gap: .5rem; font-weight:500;">
                <input type="checkbox" name="_remember_me" value="1" style="width:16px;height:16px;">
                Remember this device
            </label>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button type="submit">Sign in</button>
    </form>
    <p class="hint">
        Need access? Contact an administrator.<br>
        <a href="{{ path('app_password_forgot') }}">Forgot password?</a>
    </p>
</div>
{% endblock %}
