{% extends 'security/layout.html.twig' %}

{% block title 'Complete your invitation' %}

{% block body %}
<div class="card">
    <h1>Welcome to aavion Studio</h1>
    <p>You're joining as <strong>{{ email }}</strong>. Choose a display name and password to activate your account.</p>
    {{ form_start(acceptForm) }}
        {{ form_row(acceptForm.display_name) }}
        {{ form_row(acceptForm.plainPassword.first) }}
        {{ form_row(acceptForm.plainPassword.second) }}
        <button type="submit">Activate account</button>
    {{ form_end(acceptForm) }}
    <p class="hint"><a href="{{ path('app_login') }}">Back to sign in</a></p>
</div>
{% endblock %}
